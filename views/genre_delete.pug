extends layout

block content 

    h1 !{title}: #{genre.name}

    if genre_books.length 

        p #[strong Delete these books before attempting to delete this genre]

        div(style='margin-left:20px;margin-top:20px')
    
            h4 Books

            dl
            each book in genre_books
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}
    else
        form(method="post")
            button.btn.btn-primary(type="submit") Delete

